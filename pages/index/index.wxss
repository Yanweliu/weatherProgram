page{
  font-family: sans-serif;
  background-color: #dff9fb;
}
.container{
  width: 100%;
  height: 100vh;
}

.container .container-top{
  width: 100%;
  height: 80%;
  display: flex;
  align-items:center;
  flex-direction: column;
  /* background-color: #f0932b; */
  color: #000;
}



.container-top .location{
  flex: 2;
  margin-top: 30rpx;
  font-size: 48rpx;
  text-align: center;
}
.update-time{
  margin-top: 18rpx;
  font-size: 24rpx;
  text-align: center;
}
.dibiao {
  margin-right: 20rpx;
}
.container-top .weather{
  flex: 4;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.weather .wea-temperature{
  font-size: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
}

.weather .wea-conditions{
  font-size: 40rpx;
  height: 120rpx;
  line-height: 120rpx;
}

.weather .wea-air{
  font-size: 26rpx;
  vertical-align: middle;
  background-color: #F79F1F;
  color: #fff;
  padding: 3rpx 10rpx;
  border-radius: 3px;
}

.weather .wea-wind{
  font-size: 26rpx;
}

.container-top .tips{
  flex: 4;
  width: 70%;
}

.tips .tips-content{
  font-size: 30rpx;
}

.container .weather-info{
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  box-shadow: 0 1px 8rpx #ccc;
}

.weather-info .weather-info-day{
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: space-around;
  box-sizing: border-box;
  margin: 36rpx 0;
  padding: 0 20rpx;
  border-right: 1px solid #ccc; 
}

.weather-info .weather-info-left{
  flex: 8;
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.weather-info-left .day-con{
  margin-bottom: 20rpx;
}

.weather-info .weather-info-right{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
}

.weather-info-right .day-t{
  font-size: 26rpx
}